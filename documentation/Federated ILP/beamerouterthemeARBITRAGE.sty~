\put(0,2){%
\makebox(0,0){%
\begin{tikzpicture}
% \draw (0,0) -- (4,0) -- (4,1)-- (0,1) --cycle;

% \path[draw=red,fill=red,xscale=1,yscale=0.35] (4,1) .. controls (3.5,1) and (2,1) .. (2,0)
%       .. controls (2,1) and (0.5,1) .. (0,1) -- cycle;

\path[draw=white,fill=white,xscale=1,yscale=0.35] 
(3,1) .. controls (2.5,1) and (2,1) .. (2,0)
